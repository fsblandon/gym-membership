{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "module": "esnext",
    "strict": true,
    "types": [
      "vite/client",
      "react", "react-dom"
    ],
    "rootDir": "src",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "lib": ["ES2020", "DOM", "ES2015"]
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "jest.config.ts",
    "jest.config.cts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
